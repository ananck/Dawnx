@page
@model Dawnx.AspNetCore.IdentityUtility.Pages.Users.DetailsModel

@{
    ViewBag.Title = "Details";

    var Roles = ViewBag.Roles as string[];
    var UserRoles = ViewBag.UserRoles as string[];
}

<h2>Details</h2>

<div>
    <h4>IdentityUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Input.Id)</dt>
        <dd>@Html.DisplayFor(model => model.Input.Id)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.UserName)</dt>
        <dd>@Html.DisplayFor(model => model.Input.UserName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Input.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.EmailConfirmed)</dt>
        <dd>@Html.DisplayFor(model => model.Input.EmailConfirmed)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.PhoneNumber)</dt>
        <dd>@Html.DisplayFor(model => model.Input.PhoneNumber)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.PhoneNumberConfirmed)</dt>
        <dd>@Html.DisplayFor(model => model.Input.PhoneNumberConfirmed)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.LockoutEnd)</dt>
        <dd>@Html.DisplayFor(model => model.Input.LockoutEnd)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.LockoutEnabled)</dt>
        <dd>@Html.DisplayFor(model => model.Input.LockoutEnabled)</dd>

        <dt>Roles</dt>
        <dd>
            <ul>
                @foreach (var role in Roles)
                {
                    var id = Guid.NewGuid();
                    <li>
                        <input type="checkbox" id="@id" name="Roles" value="@role"
                               disabled @(role.In(UserRoles) ? "checked" : "") />
                        <label for="@id">@role</label>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a href="Edit?Id=@Model.Input.Id">Edit</a> |
    <a href="Index">Back to List</a>
</div>
