@page
@model Dawnx.AspNetCore.LiveAccountUtility.Pages.Roles.DetailsModel
@using Dawnx.AspNetCore.LiveAccount.Entities

@{
    ViewBag.Title = "Details";

    var LiveOperations = ViewBag.LiveOperations as IEnumerable<LiveOperation>;
    var RoleLiveOperations = ViewBag.RoleLiveOperations as IEnumerable<LiveOperation>;
}

<h2>Details</h2>

<div>
    <h4>LiveRole</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Input.Id)</dt>
        <dd>@Html.DisplayFor(model => model.Input.Id)</dd>

        <dt>@Html.DisplayNameFor(model => model.Input.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Input.Name)</dd>

        <dt>Operations</dt>
        <dd>
            <ul>
                @foreach (var liveOperation in LiveOperations)
                {
                    var id = Guid.NewGuid();
                    <li>
                        <input type="checkbox" id="@id" name="LiveOperations" value="@liveOperation"
                               disabled @(liveOperation.In(RoleLiveOperations) ? "checked" : "") />
                        <label for="@id">@liveOperation</label>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a href="Edit?Id=@Model.Input.Id">Edit</a> |
    <a href="Index">Back to List</a>
</div>
